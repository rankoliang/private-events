<h1>New Event</h1>
<p>
  <%= form_with(model: @event, local: true) do |f| %>
    <p>
      <%= f.label :title %>
      <br>
      <%= f.text_field :title %>
    </p>

    <p>
      <%= f.label :description %>
      <br>
      <%= f.text_area :description %>
    </p>
    
    <%= f.submit %>
  <% end %>
</p>
